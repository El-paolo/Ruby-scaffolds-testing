<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<div class="my-5 col-6" >

  <%= search_form_for @q do |f|  %>
  <%= f.label :UserName_or_Description_cont, "Search Tweet", class:"form-label mx-2" %>
  <%= f.search_field :UserName_or_Description_cont, placeholder:"Serach for your tweet" %>
  <% end %>
</div>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

